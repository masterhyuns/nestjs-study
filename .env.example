# 데이터베이스
DATABASE_URL="postgresql://postgres:password@localhost:12001/collaboration_dev?schema=public"
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_HOST="localhost"
REDIS_PORT=12002
REDIS_PASSWORD=""
REDIS_DB=0

# JWT
JWT_SECRET="your-secret-key-change-in-production"
JWT_PRIVATE_KEY="path/to/private-key.pem"
JWT_PUBLIC_KEY="path/to/public-key.pem"
JWT_ACCESS_TOKEN_EXPIRATION="15m"
JWT_REFRESH_TOKEN_EXPIRATION="7d"

# 파일 스토리지 (S3/MinIO)
STORAGE_ENDPOINT="http://localhost:12003"
STORAGE_ACCESS_KEY="minioadmin"
STORAGE_SECRET_KEY="minioadmin"
STORAGE_BUCKET="collaboration-files"
STORAGE_REGION="us-east-1"

# 애플리케이션
NODE_ENV="development"
PORT=12000
API_PREFIX="api/v1"
CORS_ORIGIN="http://localhost:13000"

# 로깅
LOG_LEVEL="debug"

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
